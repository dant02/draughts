<Grid x:Class="DameGUI.Components.Console"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <TextBox Name="rdBx"
             IsReadOnly="True"
             Cursor="Arrow"
             FontFamily="Consolas"
             FontSize="15"
             HorizontalScrollBarVisibility="Auto"
             VerticalScrollBarVisibility="Auto"
             Grid.Row="0">
    </TextBox>

    <TextBox Name="wrBx"
             FontFamily="Consolas"
             Grid.Row="1">
    </TextBox>

    <Grid.RowDefinitions>
        <RowDefinition />
        <RowDefinition Height="auto" />
    </Grid.RowDefinitions>
</Grid>