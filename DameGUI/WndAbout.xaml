<Window x:Class="DameGUI.WndAbout"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="O aplikaci" WindowStyle="ToolWindow"
        SizeToContent="WidthAndHeight" ResizeMode="NoResize" KeyDown="Window_KeyDown">
    <StackPanel Orientation="Vertical">
        <TextBlock Margin="5" Text="Parašutistická dáma" TextAlignment="Center" FontSize="20" FontWeight="Bold" />
        <Separator />
        <TextBlock Margin="5" Text="Aplikace vznikla jako ročníková práce v rámci&#x0a;předmětů Projektový seminář 1 a 2&#x0a;v akademickém roce 2012/2013&#x0a;na Přírodovědecké fakultě&#x0a;Univerzity Palackého v Olomouci" TextWrapping="Wrap" TextAlignment="Center" />
        <Separator />
        <Grid>
            <TextBlock Grid.Column="0" Margin="0,0,2,0" Text="Vypracoval:" TextAlignment="Right" />
            <TextBlock Grid.Column="1" Margin="2,0,0,0" Text="Daniel Trubač, R11978" />

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
        </Grid>

        <Button Name="btn" Content="Zavřít" Width="75" HorizontalAlignment="Right" Margin="0,10,10,10" IsDefault="True" />
    </StackPanel>
</Window>